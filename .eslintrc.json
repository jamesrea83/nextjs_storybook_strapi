{
	"extends": ["next/core-web-vitals", "plugin:storybook/recommended"],
	"plugins": ["prettier"],
	"rules": {
		"prettier/prettier": [
			"error",
			{
				"singleQuote": true,
				"parser": "flow",
				"tabWidth": 4,
				"useTabs": true,
				"printWidth": 80,
				"endOfLine": "auto",
				"arrowParens": "avoid",
				"semi": true,
				"trailingComma": true
			}
		]
	}
}
